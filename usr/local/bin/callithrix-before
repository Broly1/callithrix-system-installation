#!/bin/bash
echo "#################################"
echo "Start callithrix-before"
echo "#################################"
echo
echo "#################################"
echo "Populate Core Team keys"
echo "#################################"
echo
pacman-key --init
pacman-key --populate archlinux
pacman-key --populate chaotic
echo

echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
mv -v /etc/mkinitcpio.d/callithrix /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "End callithrix-before"
echo "#################################"
echo
